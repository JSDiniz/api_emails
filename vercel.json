{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/presence",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/presence",
      "schedule": "55 17 * * *"
    },
    {
      "path": "/api/cron/presence",
      "schedule": "0 21 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}