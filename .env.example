# Ambiente de execucao (development, production, test)
NODE_ENV=production

# Porta do servidor (opcional, padrao: 3333)
PORT=3333

# Nome do(a) doutor
DOCTOR_NAME=Dra. Ana Silva

# Resend API Key - Para envio de emails
RESEND_API_KEY=your_resend_api_key_here

# E-mail do médico/doutor que receberá as notificações
DOCTOR_EMAIL=contato@example.com

# Email remetente (pode ser o da clínica)
EMAIL_FROM=agendamento@example.com.br

# Google Calendar API Credentials
GOOGLE_CLIENT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

SEND_WHATSAPP=false

EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua_api_key
EVOLUTION_INSTANCE=nome_da_instancia

WHATSAPP_VERIFY_TOKEN=nome_token
